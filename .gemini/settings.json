{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": [
        "/opt/homebrew/bin/mcp-server-filesystem",
        "/Users/dt/projects"
      ]
    },
    "github": {
      "command": "/bin/sh",
      "args": [
        "-c",
        "GITHUB_TOKEN=$(/opt/homebrew/bin/gh auth token) /opt/homebrew/bin/github-mcp-server stdio"
      ]
    },
    "r-lang": {
      "command": "Rscript",
      "args": [
        "-e",
        "library(MCPR); mcpr_server()"
      ]
    }
  }
}